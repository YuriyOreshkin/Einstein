
@{
    ViewBag.Title = "Настройки";
}


@(Html.Kendo().TabStrip()
                        .HtmlAttributes(new { style = " height: calc(100vh - 40px);" })
                        .Name("AdminTabStrip")

                        .TabPosition(TabStripTabPosition.Top)
                        .Items(items =>
                        {
                            items.Add().Text("Настройки").Selected(true).LoadContentFrom("Settings", "MailSettingsService");


                            items.Add().Text("Шаблон").LoadContentFrom("Editor", "TemplateService");
                        })
                        .Events(ev=>ev.ContentLoad("onError"))
)

<script>
    function onError(e) {
        var content = $(e.contentElement).text();
        var error = content.indexOf("Ошибка:") > -1
        
        if (error) {
           
            showError(content);
        }
    }
</script>
