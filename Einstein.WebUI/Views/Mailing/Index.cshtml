
@(Html.Kendo().TabStrip()
                        .HtmlAttributes(new { style = " height: calc(83vh);" })
                        .Name("MailingTabStrip")
                        
                        .TabPosition(TabStripTabPosition.Left)
                        .Items(items =>
                        {
                            items.Add().Text("Основные настройки").Selected(true).LoadContentFrom("Settings", "MailingSettingsService");

                            items.Add().Text("Шаблон письма").LoadContentFrom("Editor", "MailingTemplateService");

                            items.Add().Text("Расписание").LoadContentFrom("Editor", "TermsService");

                        })
                        .Events(ev=>ev.ContentLoad("onError"))
                        
)


