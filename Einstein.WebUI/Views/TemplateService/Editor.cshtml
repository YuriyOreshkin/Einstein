                                                                                    .CustomTemplate(ct=>ct.Template("<div style='width:900px;'><label for='subject' style='vertical-align:middle;margin-right:10px;'>Тема: </label>" + Html.Kendo().TextBoxFor(m=>m.subject).HtmlAttributes(new { style= "width: 90%;" }).ToClientTemplate()+"</div>"))

