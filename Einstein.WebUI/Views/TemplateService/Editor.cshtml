@model string
<script>

    function SaveTemplate(e)
    {
        var editor = $("#template-editor").data("kendoEditor");
        var editorContents = editor.encodedValue();

        $.post('@Url.Action("SaveTemplate", "TemplateService")', {
                data: editorContents
            },
            function (e) {
                showSuccess('Шаблон успешно сохранён!');
            }
        );
    }


</script>
